<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE module PUBLIC "-//Google Inc.//DTD Google Web Toolkit 2.0.1//EN" "http://google-web-toolkit.googlecode.com/svn/tags/2.0.1/distro-source/core/src/gwt-module.dtd">
<module rename-to='kfc'>
	<inherits name='com.google.gwt.user.User' />
	<inherits name="com.google.gwt.user.UserAgent" />
	<inherits name="com.google.gwt.http.HTTP" />
	<inherits name='com.google.gwt.app.App' />
	<inherits name='com.google.gwt.requestfactory.RequestFactory' />
	
	<replace-with class="hu.sch.kfc.client.atmosphere.impl.AtmosphereTransportImplIE">
		<when-type-is class="hu.sch.kfc.client.atmosphere.AtmosphereTransport" />
		<any>
			<when-property-is name="user.agent" value="ie6" />
			<when-property-is name="user.agent" value="ie8" />
		</any>
	</replace-with>

	<!-- Ha nagy tesztelés megy, akkor csak arra menjen a fordítás, amit tényleg használunk -->
	<!-- <set-property name="user.agent" value="safari" />-->

	<!-- Specify the app entry point class.                         -->
	<entry-point class='hu.sch.kfc.client.KFC' />

	<!-- Specify the paths for translatable code                    -->
	<source path='client' />
	<source path='shared' />

</module>
