<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
    xmlns:g="urn:import:com.google.gwt.user.client.ui">
    <ui:style>
        .important {
        	font-weight: bold;
        }
        
        .container {
        	width: 1000px;
        	margin: auto;
        }
    </ui:style>
    <g:HTMLPanel styleName="{style.container}">
        <g:SimplePanel ui:field="mainPanel"></g:SimplePanel>
        <g:Button ui:field="likeBtn" text="Like me!" />
        <g:Label ui:field="likeLabel">?</g:Label>
        <div style="font-size: x-small; text-align: center; margin-top: 15px">Kriván Bálint 2010</div>
    </g:HTMLPanel>
</ui:UiBinder>
