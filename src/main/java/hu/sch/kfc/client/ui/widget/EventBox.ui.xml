<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui">
    <ui:style>
        div.itemOuter {
        	margin: 6px;
        	border: 1px solid #CAD4E6;
        	border-radius: 8px;
        	-moz-border-radius: 8px;
        }
        
        div.itemInner {
        	margin-left: 200px;
        	overflow: visible;
        	position: relative;
        	min-height: 110px;
        }
        
        div.itemMain {
        	background-color: #E0ECFF;
        	border-color: #CAD4E6;
        	border-style: solid;
        	border-width: 0px 1px 0px 0px;
        	border-radius: 8px;
        	-moz-border-radius: 8px;
        	position: absolute;
        	left: 0px;
        	top: 0px;
        	margin-left: -200px;
        	width: 200px;
        	height: 100%;
        }
        
        div.itemMain > div {
        	padding: 10px;
        }
        
        div.itemDesc {
        	padding: 10px;
        }
    </ui:style>
    <g:HTMLPanel>
        <div class="{style.itemOuter}">
            <div class="{style.itemInner}">
                <div class="{style.itemMain}">
                    <div ui:field="itemHeader">
                    <div><strong>Rendezvény neve</strong></div>
                    <div>Rendelési időszak:</div>
                    <div style="text-align: center; font-size: small">2010. 05. 10. 17:00-20:00</div>
                    <div style="text-align: center;"><g:Button text="Rendelek" /></div>
                    </div>
                </div>
                <div class="{style.itemDesc}" ui:field="itemDesc">
                    Ide jön a
                    description
                </div>
                <div style="clear: both"></div>
            </div>
        </div>
    </g:HTMLPanel>
</ui:UiBinder>