<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://java.sun.com/xml/ns/javaee" xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
	id="WebApp_ID" version="2.5">
	<display-name>KFC</display-name>

	<resource-ref>
		<res-ref-name>jdbc/kfc</res-ref-name>
		<res-type>javax.sql.DataSource</res-type>
		<res-auth>Container</res-auth>
	</resource-ref>

	<servlet>
		<servlet-name>JerseyAtmosphere</servlet-name>
		<servlet-class>org.atmosphere.cpr.AtmosphereServlet</servlet-class>
		<init-param>
			<param-name>org.atmosphere.useNative</param-name>
			<param-value>true</param-value>
		</init-param>
		<init-param>
			<param-name>org.atmosphere.cpr.CometSupport.maxInactiveActivity</param-name>
			<param-value>30000</param-value>
		</init-param>
	</servlet>
	<servlet-mapping>
		<servlet-name>JerseyAtmosphere</servlet-name>
		<url-pattern>/kfc/channel/*</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>groupServlet</servlet-name>
		<servlet-class>hu.sch.kfc.server.GroupServiceImpl</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>groupServlet</servlet-name>
		<url-pattern>/kfc/group</url-pattern>
	</servlet-mapping>
	<servlet>
		<servlet-name>programServlet</servlet-name>
		<servlet-class>hu.sch.kfc.server.ProgramServiceImpl</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>programServlet</servlet-name>
		<url-pattern>/kfc/program</url-pattern>
	</servlet-mapping>
	<welcome-file-list>
		<welcome-file>KFC.html</welcome-file>
	</welcome-file-list>
</web-app>